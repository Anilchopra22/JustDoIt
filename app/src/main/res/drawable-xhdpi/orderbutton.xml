<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#56b7cc" />
            <stroke
                android:width="1dp"
                android:color="#70daf1" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="48dp"
                android:top="1dp"
                android:right="48dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#68c8dd"
                android:endColor="#70daf1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#70daf1" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="48dp"
                android:top="1dp"
                android:right="48dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>